@model IEnumerable<modulAR_M.Caro.Models.Empleo>

@{
    ViewData["Title"] = "Index";
}

<h1>Empleos</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Escaparate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ubicacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           <td>
             @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
               <img src="~/imagenes/@item.Imagen" style="border-radius: 10px; object-fit: cover; " width="50px" height="50px" />
              @* @Html.DisplayFor(modelItem => item.Imagen)*@
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Escaparate)*@
                   <div class="si-no-display">
                @if (item.Escaparate == true) {
                  <span class="si">Sí  </span>
                   <input type="radio" value="true" checked="@item.Escaparate" readonly="readonly" disabled />

                } else {
                    <span class="no">No  </span>
                   <input type="radio" value="false" disabled />
                }
            </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ubicacion.Ciudad)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    @* <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |*@
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
        </tr>
}
    </tbody>
</table>
